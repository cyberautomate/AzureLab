{
    "properties": {
        "displayName": "Deny Public IPs in spokes",
        "policyType": "Custom",
        "mode": "All",
        "description": "Prevent creation of public IP addresses in spoke resource groups.",
        "policyRule": {
            "if": {
                "anyOf": [
                    {
                        "field": "type",
                        "equals": "Microsoft.Network/publicIPAddresses"
                    }
                ]
            },
            "then": {
                "effect": "Deny"
            }
        }
    }
}